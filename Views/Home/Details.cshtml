@model PokemonMVC.Models.Pokemon

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles de @Model.Name</title>
    <style>
        /* Estilo Global */
        body {
            font-family: 'Press Start 2P', cursive;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            color: #333;
        }

        h1 {
            text-align: center;
            color: #009688;
            margin-top: 50px;
        }

        .card {
            width: 300px;
            margin: 50px auto;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: white;
            border: 2px solid #ff0000; /* Borde rojo */
        }

            .card img {
                width: 100%;
                border-radius: 10px;
                object-fit: contain;
            }

            .card h1 {
                font-size: 24px;
                color: #009688;
                margin: 10px 0;
            }

        .info {
            text-align: left;
            margin-top: 15px;
        }

            .info p {
                margin: 5px 0;
                font-size: 14px;
                color: #333;
            }

            .info ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
            }

                .info ul li {
                    font-size: 14px;
                    color: #333;
                }

        .btn {
            display: inline-block;
            margin-top: 15px;
            padding: 10px 15px;
            font-size: 16px;
            text-decoration: none;
            color: white;
            background-color: #ff0000; /* Botón rojo */
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .btn:hover {
                background-color: #d40000; /* Rojo más oscuro al hacer hover */
            }

    </style>
</head>
<body>

    <div class="card">
        <img src="@(!string.IsNullOrEmpty(Model.Sprites?.Front_Default) ? Model.Sprites.Front_Default : "/images/default-pokemon.png")" alt="@Model.Name">
        <h1>@Model.Name</h1>

        <div class="info">
            <p><strong>Altura:</strong> @(Model.Height != null ? Model.Height : "No disponible")</p>
            <p><strong>Peso:</strong> @(Model.Weight != null ? Model.Weight : "No disponible")</p>

            <p><strong>Habilidades:</strong></p>
            @if (Model.Abilities != null && Model.Abilities.Any())
            {
                <ul>
                    @foreach (var ability in Model.Abilities)
                    {
                        <li>@ability.Ability.Name</li>
                    }
                </ul>
            }
            else
            {
                <p>No tiene habilidades registradas.</p>
            }

            <p><strong>Tipos:</strong></p>
            @if (Model.Types != null && Model.Types.Any())
            {
                <ul>
                    @foreach (var type in Model.Types)
                    {
                        <li>@type.Type.Name</li>
                    }
                </ul>
            }
            else
            {
                <p>No tiene tipos registrados.</p>
            }
        </div>

        <!-- Botón para regresar a la lista -->
        <a href="@Url.Action("Index", "Home")" class="btn">Volver a la lista</a>



    </div>

</body>
</html>
